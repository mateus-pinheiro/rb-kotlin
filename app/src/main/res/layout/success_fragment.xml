<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" tools:ignore="MissingDefaultResource">



        <ImageView
                   android:layout_width="0dp"
                   android:layout_height="40dp"
                   android:foregroundGravity="center_vertical"
                   app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                   app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
                   app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                   app:layout_constraintHorizontal_bias="0.497" android:id="@+id/success_iv"
                   app:srcCompat="@drawable/ic_cloud_done"
                   app:tint="@color/colorPrimary"/>
        <TextView
                android:text="Sucesso"
                android:layout_width="172dp"
                android:layout_height="0dp"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="20dp"
                android:id="@+id/title_success_tv" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/success_iv" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="100dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="100dp"/>
        <TextView
                android:text="O login foi efetuado com sucesso!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description_success_tv" android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/title_success_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="86dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="86dp"/>
        <Button
                android:text="OK"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorSuccessGreen"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/button_background"
                android:id="@+id/success_btn" android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description_success_tv" android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"/>


</android.support.constraint.ConstraintLayout>