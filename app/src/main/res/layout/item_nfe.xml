<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:clickable="true"
                                             android:id="@+id/clNfe"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="90dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp" app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/cvItemNf"
                app:cardCornerRadius="@dimen/fab_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.6"
                android:layout_marginStart="3dp" android:layout_marginEnd="3dp" android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/ic_rb_pharma_white"
                        android:id="@+id/imageView6" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                        android:hint="84938492783049382909837485948372834901931726"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:id="@+id/tvBarcodeNf" android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="15dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="10dp"/>
                <TextView
                        android:hint="15/10/2018"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tvStartDateNf" android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView6" android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeNf"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>
                <TextView
                        android:hint="10/12/2018"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tvEndDateNf"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeNf"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
                        app:layout_constraintStart_toEndOf="@+id/tvStartDateNf"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:hint="2 Itens"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tvQuantityItemsNf"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/tvBarcodeNf"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
                />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>