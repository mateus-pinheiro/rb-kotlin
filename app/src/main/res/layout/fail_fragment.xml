<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingDefaultResource">


    <TextView
            android:text="Falha"
            android:layout_width="128dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:id="@+id/tvTitle"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_error_black_24dp"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    <TextView

            android:text="Ocorreu um error"
            android:textAlignment="center"
            android:layout_width="176dp"
            android:layout_height="0dp" android:id="@+id/tvMessage"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="OK"
            android:textColor="@android:color/white"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:id="@+id/fail_btn"
            android:backgroundTint="@color/colorFailRed"
            android:background="@drawable/button_background"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage" android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"/>
</android.support.constraint.ConstraintLayout>