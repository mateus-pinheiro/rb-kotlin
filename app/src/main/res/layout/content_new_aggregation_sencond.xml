<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_new_aggregation_sencond"
        tools:context=".ui.NewAggregationSencondActivity">

    <Button
            android:text="Caixa"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btBox" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btPalete"
            app:layout_constraintVertical_chainStyle="spread_inside" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="1dp"/>
    <Button
            android:text="Palete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btPalete"
            app:layout_constraintTop_toBottomOf="@+id/btBox"
            app:layout_constraintBottom_toTopOf="@+id/btPackge" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="1dp"/>
    <Button
            android:text="Pacote"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btPackge"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/btPalete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>