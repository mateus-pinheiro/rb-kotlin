<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_exit"
        tools:context=".ui.ExitActivity">


    <TextView
            android:text="Documento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvCodeDocument" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:singleLine="true"
            android:id="@+id/etNfCheckout"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCodeDocument" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:hint="Digite ou escaneie a Nota Fiscal"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="Tipo de movimentação"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etNfCheckout"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spCheckoutType"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <View
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spCheckoutType" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Negócio de origem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:focusableInTouchMode="false"
            android:ems="10"
            android:id="@+id/etFromFiscalRegistry"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:hint="" android:textColor="@android:color/black"/>
    <TextView
            android:text="Local de origem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etFromFiscalRegistry" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:id="@+id/etFromCompanyRegistry" android:layout_marginStart="16dp"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:textColor="@android:color/black"/>


</android.support.constraint.ConstraintLayout>